{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "./src/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",],
  "exclude": ["node_modules", "dist"],
}
